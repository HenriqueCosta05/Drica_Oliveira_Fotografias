---
import { Navbar } from '../components/Navbar.tsx';
import '../styles/tailwind.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Adriana Oliveira Fotografias',
  description = 'Serviços de fotografia profissional, incluindo ensaios, casamentos e eventos especiais.',
} = Astro.props;
---

<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet" />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen">
    <Navbar className="bg-white shadow-md" client:load>
      <Navbar.Brand href="/" className="text-2xl font-bold text-gray-800">
        <img src="/favicon.svg" alt="Logo" class="inline-block h-8 mr-2" />
        Adriana Oliveira Fotografias
      </Navbar.Brand>
      <Navbar.Menu className="space-x-4">
        <Navbar.Item href="/" active>Home</Navbar.Item>
        <Navbar.Item href="/portfolio">Portfolio</Navbar.Item>
        <Navbar.Item href="/about">About</Navbar.Item>
        <Navbar.Item href="/contact">Contact</Navbar.Item>
      </Navbar.Menu>
      <Navbar.CTA cta={{ text: 'Agende uma sessão', href: '#contact' }} />
    </Navbar>
    <main class="flex-grow">
      <slot />
    </main>
  </body>
</html>