---
import Card from "../Card";
import Wrapper from "../Wrapper.astro";
import ServicesIntro from "./ServicesIntro.astro";
import services from '../../data/services.json'

const servicesArr = services.services;
---
<section id="servicos">
<Wrapper>
    <ServicesIntro />
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-8">
        {servicesArr.map(service => (
            <Card key={service.id} bgColor="bg-gradient-to-br from-purple-300 to-indigo-500">
                <h3 class="font-black text-4xl text-center">{service.title}</h3>
                <p class="mt-4">{service.description}</p>
            </Card>
        ))}
    </div>
</Wrapper>
</section>
